<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile"
    xmlns:views="clr-namespace:Mobile.Views"
    Title="PalmBiz">

    <!-- Login Route -->
    <ShellContent 
        Route="login"
        ContentTemplate="{DataTemplate views:LoginView}"
        FlyoutItemIsVisible="False" />

    <!-- Main Application -->
    <FlyoutItem Route="main">
        <Tab Title="Productos">
            <ShellContent
                Title="Lista"
                ContentTemplate="{DataTemplate views:ProductListView}"
                Route="ProductList" />
        </Tab>
        
        <!-- Admin only tab -->
        <Tab Title="AdministraciÃ³n" x:Name="AdminTab">
            <ShellContent
                Title="Usuarios"
                ContentTemplate="{DataTemplate views:ProductListView}"
                Route="Users" />
        </Tab>
    </FlyoutItem>

</Shell>

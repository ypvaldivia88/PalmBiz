<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20"
          RowSpacing="20">

        <!-- Header -->
        <StackLayout Grid.Row="0" Spacing="10" Margin="0,40,0,0">
            <Image Source="logo.png" 
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"/>
            <Label Text="PalmBiz" 
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding IsRegistering, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Crear Cuenta|Iniciar Sesión'}"
                   FontSize="20"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Login/Register Form -->
        <StackLayout Grid.Row="1" Spacing="15" VerticalOptions="Center">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                   HorizontalOptions="Center"/>

            <!-- Registration fields -->
            <StackLayout IsVisible="{Binding IsRegistering}">
                <Label Text="Nombre" />
                <Entry Text="{Binding Name}" Placeholder="Nombre completo" />
                
                <Label Text="Email (opcional)" />
                <Entry Text="{Binding Email}" Placeholder="email@example.com" Keyboard="Email" />
            </StackLayout>

            <!-- Common fields -->
            <Label Text="Usuario" />
            <Entry Text="{Binding Username}" Placeholder="Nombre de usuario" />
            
            <Label Text="Contraseña" />
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Contraseña" />
            
            <!-- Confirm password for registration -->
            <StackLayout IsVisible="{Binding IsRegistering}">
                <Label Text="Confirmar Contraseña" />
                <Entry Text="{Binding ConfirmPassword}" IsPassword="True" Placeholder="Confirmar contraseña" />
            </StackLayout>

            <!-- Action buttons -->
            <Button Text="Iniciar Sesión"
                    Command="{Binding LoginCommand}"
                    IsVisible="{Binding IsRegistering, Converter={StaticResource InvertBoolConverter}}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="50"
                    Margin="0,20,0,0" />
                    
            <Button Text="Registrarse"
                    Command="{Binding RegisterCommand}"
                    IsVisible="{Binding IsRegistering}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center" />
        </StackLayout>

        <!-- Footer -->
        <StackLayout Grid.Row="2" Margin="0,0,0,20">
            <Button Text="{Binding IsRegistering, Converter={StaticResource BoolToStringConverter}, ConverterParameter='¿Ya tienes cuenta? Iniciar sesión|¿No tienes cuenta? Regístrate'}"
                    Command="{Binding ToggleModeCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}" />
        </StackLayout>
    </Grid>
</ContentPage>